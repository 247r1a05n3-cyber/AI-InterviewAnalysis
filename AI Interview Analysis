    <script>
        const QUESTIONS = {
            Java: [
                { q: "Evaluate the architectural trade-offs between monolithic and microservices deployment in a high-availability Java ecosystem.", k: ["scalability", "latency", "coupling", "container", "resilience", "overhead"] },
                { q: "Deep dive: How does JVM manage Young Generation garbage collection to optimize throughput vs. pause-times?", k: ["eden", "survivor", "g1gc", "minor", "throughput", "sweep"] }
            ],
            Frontend: [
                { q: "Examine the React Reconciler's Fiber architecture. How does it manage interruptible rendering?", k: ["scheduler", "priority", "reconciliation", "work loop", "update", "concurrent"] },
                { q: "Assess strategies for Web Vital optimization (LCP/CLS) specifically in server-side rendered (SSR) applications.", k: ["hydration", "pre-render", "shift", "paint", "critical css", "caching"] }
            ]
        };

        let currIdx = 0;
        let userData = {};
        let analytics = [];
        let time = 300;
        let timer;

        function launch() {
            const name = document.getElementById('user-name').value;
            if(!name) return alert("System Identity Required.");
            userData = { name, role: document.getElementById('user-role').value };
            userData.pool = QUESTIONS[userData.role];
            
            document.getElementById('screen-start').classList.add('hidden');
            document.getElementById('screen-interview').classList.remove('hidden');
            document.getElementById('nav-name').innerText = name;
            
            loadQ();
            startTimer();
        }

        function startTimer() {
            timer = setInterval(() => {
                time--;
                const m = Math.floor(time/60); const s = time%60;
                document.getElementById('timer-text').innerText = `${m}:${s < 10 ? '0'+s : s}`;
                document.getElementById('timer-bar').style.width = (time/300 * 100) + '%';
                if(time <= 0) finalize();
            }, 1000);
        }

        function loadQ() {
            const q = userData.pool[currIdx];
            document.getElementById('q-text').innerText = q.q;
            document.getElementById('step-count').innerText = (currIdx + 1).toString().padStart(2, '0');
        }

        function submit() {
            const val = document.getElementById('ans-input').value;
            if(val.split(' ').length < 5) return alert("Insufficient data. Please elaborate.");
            
            const q = userData.pool[currIdx];
            const matches = q.k.filter(k => val.toLowerCase().includes(k)).length;
            
            analytics.push({
                tech: (matches / q.k.length) * 100,
                conf: Math.min((val.split(' ').length / 60) * 100, 100),
                fluency: Math.min((val.split('.').length / 4) * 100, 100),
                text: val
            });

            currIdx++;
            if(currIdx < userData.pool.length) {
                loadQ();
                document.getElementById('ans-input').value = "";
            } else {
                finalize();
            }
        }

        function finalize() {
            clearInterval(timer);
            document.getElementById('screen-interview').classList.add('hidden');
            document.getElementById('screen-result').classList.remove('hidden');

            const avgTech = Math.round(analytics.reduce((a,b)=>a+b.tech,0)/analytics.length);
            const avgConf = Math.round(analytics.reduce((a,b)=>a+b.conf,0)/analytics.length);
            const avgFlu = Math.round(analytics.reduce((a,b)=>a+b.fluency,0)/analytics.length);

            document.getElementById('res-header').innerText = `${userData.name} | ${userData.role}`;
            document.getElementById('res-score').innerText = avgTech + '%';
            document.getElementById('res-verdict').innerText = avgTech > 75 ? "ELITE" : (avgTech > 50 ? "QUALIFIED" : "DEFICIENT");

            const pros = document.getElementById('list-pros');
            const cons = document.getElementById('list-cons');
            const coach = document.getElementById('coach-text');

            if(avgTech > 60) pros.innerHTML += `<li>High semantic density of technical keywords.</li>`;
            if(avgConf > 60) pros.innerHTML += `<li>Structured and comprehensive articulation.</li>`;
            
            if(avgTech < 60) cons.innerHTML += `<li>Deficit in core architectural terminology.</li>`;
            if(avgFlu < 60) cons.innerHTML += `<li>Fragmented sentence logic impacts clarity.</li>`;

            if(avgTech < 60) coach.innerText = "Focus on Deep-Level Terminology. Your logic is sound, but you aren't using the specific industry-standard vocabulary expected at a Senior level.";
            else coach.innerText = "Excellent delivery. You demonstrate a mastery of both theory and implementation. Your ability to maintain high keyword density under time pressure is impressive.";

            new Chart(document.getElementById('radarPlot'), {
                type: 'radar',
                data: {
                    labels: ['Technical Accuracy', 'Structural Confidence', 'Fluency', 'Terminology', 'Logic Consistency'],
                    datasets: [{
                        label: 'Neural Profile',
                        data: [avgTech, avgConf, avgFlu, avgTech, (avgTech+avgConf)/2],
                        backgroundColor: 'rgba(0, 242, 255, 0.2)',
                        borderColor: '#00f2ff',
                        pointBackgroundColor: '#00f2ff',
                        borderWidth: 3
                    }]
                },
                options: { 
                    scales: { r: { angleLines: { color: 'rgba(255,255,255,0.1)' }, grid: { color: 'rgba(255,255,255,0.1)' }, pointLabels: { color: '#94a3b8', font: { size: 12 } }, ticks: { display: false }, min: 0, max: 100 } },
                    plugins: { legend: { display: false } }
                }
            });
        }
    </script>
</body>
</html>
