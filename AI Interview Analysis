    <script>
        const DB = {
            qa: {
                easy: { q: "What is the primary benefit of using a CDN?", m: "CDNs (Content Delivery Networks) reduce latency by caching static content on servers geographically closer to the end-user.", k: ["latency", "cache", "geographic", "static"] },
                hard: { q: "Describe the 'Dual-Write' problem in microservices and its solution.", m: "Dual-write occurs when a system tries to update a DB and send a message simultaneously. Solved via the Outbox Pattern or Change Data Capture (CDC).", k: ["outbox", "cdc", "consistency", "atomicity"] }
            },
            mcq: {
                medium: { q: "Which HTTP status code is used for 'Rate Limiting'?", options: ["401", "403", "429", "503"], ans: 2, m: "429 Too Many Requests is the standard for rate-limited clients." }
            },
            apt: {
                easy: { q: "If a project takes 2 developers 10 days, how long for 5 developers?", options: ["2 Days", "4 Days", "5 Days", "20 Days"], ans: 1, m: "Inverse proportion: 2*10 / 5 = 4 days." }
            },
            code: {
                hard: { q: "Write the logic for finding the longest substring without repeating characters.", m: "Use a sliding window approach with two pointers and a hash set to track characters in O(n) time.", k: ["window", "pointer", "hash", "linear"] }
            }
        };

        let activeMode = '', activeDiff = '', userChoice = null;

        function authenticate() {
            const name = document.getElementById('user-id').value;
            if(!name) return;
            document.getElementById('auth-screen').classList.add('hidden');
            document.getElementById('home-hub').classList.remove('hidden');
            document.getElementById('welcome-text').innerText = `Session Initialized for ID: ${name}`;
        }

        function selectMode(m) {
            activeMode = m;
            document.getElementById('mode-title').innerText = m === 'code' ? 'Coding Round' : m.toUpperCase() + ' Round';
            document.getElementById('diff-modal').classList.remove('hidden');
        }

        function launch(d) {
            activeDiff = d;
            document.getElementById('diff-modal').classList.add('hidden');
            document.getElementById('home-hub').classList.add('hidden');
            document.getElementById('test-screen').classList.remove('hidden');
            
            const qData = DB[activeMode][activeDiff] || DB[activeMode]['easy'] || DB['qa']['easy'];
            document.getElementById('q-text').innerText = qData.q;
            document.getElementById('round-label').innerText = `${activeMode} // ${activeDiff}`;

            const zone = document.getElementById('input-zone');
            zone.innerHTML = '';
            
            if(activeMode === 'qa') {
                zone.innerHTML = `<textarea id="ans" class="w-full h-64 bg-black border border-white/10 rounded-3xl p-8 text-xl focus:border-cyan-400 outline-none"></textarea>`;
            } else if(activeMode === 'mcq' || activeMode === 'apt') {
                zone.innerHTML = qData.options.map((opt, i) => `<button onclick="pick(${i})" class="option-btn" id="opt-${i}">${opt}</button>`).join('');
            } else if(activeMode === 'code') {
                zone.innerHTML = `<textarea id="ans" class="w-full h-80 bg-black border border-rose-500/20 rounded-2xl p-6 mono text-rose-500 focus:border-rose-500 outline-none" placeholder="Enter logic/pseudocode..."></textarea>`;
            }
        }

        function pick(i) {
            userChoice = i;
            document.querySelectorAll('.option-btn').forEach(b => b.classList.remove('selected'));
            document.getElementById(`opt-${i}`).classList.add('selected');
        }

        function analyze() {
            const qData = DB[activeMode][activeDiff] || DB[activeMode]['easy'] || DB['qa']['easy'];
            const uInput = document.getElementById('ans')?.value || (userChoice !== null ? qData.options[userChoice] : "No Selection");
            
            document.getElementById('u-view').innerText = uInput;
            document.getElementById('m-view').innerText = qData.m;
            document.getElementById('comparison-modal').classList.remove('hidden');
        }

        function finalize() {
            document.getElementById('comparison-modal').classList.add('hidden');
            document.getElementById('test-screen').classList.add('hidden');
            document.getElementById('score-screen').classList.remove('hidden');
            
            // Logic Simulation
            const score = Math.floor(Math.random() * 40) + 60;
            document.getElementById('total-score').innerText = score + "%";
            document.getElementById('strength-txt').innerText = "Exceptional speed in logic resolution. Your semantic markers align with high-tier architecture standards.";
            document.getElementById('gap-txt').innerText = "Focus on specific industry-standard patterns like the Outbox Pattern or specialized CDNs for global scale.";
        }
    </script>
</body>
</html>
