        .btn-neon { background: var(--neon); color: #000; font-weight: 800; border-radius: 1rem; transition: 0.3s; text-transform: uppercase; letter-spacing: 0.1em; }
        .btn-neon:hover { transform: scale(1.02); box-shadow: 0 0 30px rgba(0, 242, 255, 0.4); }
        .track-card { background: #151515; border: 1px solid #222; transition: 0.3s; cursor: pointer; }
        .track-card:hover { border-color: var(--neon); background: #1a1a1a; transform: translateY(-5px); }
        .hidden { display: none !important; }
        .option-btn { border: 1px solid rgba(255,255,255,0.05); transition: 0.2s; text-align: left; width: 100%; padding: 1.25rem; border-radius: 1rem; margin-bottom: 0.75rem; }
        .option-btn:hover { border-color: var(--neon); background: rgba(0, 242, 255, 0.05); }
        .option-btn.selected { border-color: var(--neon); background: var(--neon); color: #000; }
